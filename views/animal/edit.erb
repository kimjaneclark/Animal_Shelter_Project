<form method="post" action="/animals/<%= @animal.id %>">
  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="<%= @animal.name %>"/>

  <label for="type">Type:</label>
  <input type="text" name="type" id = "type" value="<%= @animal.type %>"/>

  <label for="entry-date">Entry Date:</label>
    <input id="entry-date" type="date" name="entry_date" value="<%= @animal.entry_date %>"/>

  <label for="status">Edit animal status:</label>
  <select name="status" id="status">
   <option
   value="Unavailable"
   <%= "selected" if @animal.status == "Unavailable" %>
   >Unavailable</option>
   <option
   value="Available"
   <%= "selected" if @animal.status == "Available" %>
   >Available</option>
 </select>





  <input type='submit' value="Edit Animal">
</form>
